---
import { Image } from 'astro:assets';
import { cn } from '~/helpers/cn';
import HoverableLink from './ui/hoverable-link.astro';

interface Props {
	eventName: string;
	imageUrl: ImageMetadata;
	description: string;
	facebookLink: string;
	class?: string;
}

const {
	eventName,
	imageUrl,
	description,
	facebookLink,
	class: className,
} = Astro.props;
---

<div
	class={cn(
		'hover:scale-[1.01] flex flex-col transform rounded-sm border transition-all duration-300 ease-in-out',
		className,
	)}
>
	<div class="event-image w-full">
		<Image
			src={imageUrl}
			alt={eventName}

			class="object-fit aspect-[1.2/0.7] rounded-t-sm duration-700 ease-in-out"
		/>
	</div>

	<div class="event-content p-4">
		<div class="flex flex-col gap-2">
			<h3 class="event-title text-xl font-bold text-slate-900">
				{eventName}
			</h3>
			<p class="event-description justify text-left text-base text-slate-700 pb-4">
				{description}
			</p>
		</div>
		<HoverableLink>
			Know More
		</HoverableLink>
	</div>
</div>
