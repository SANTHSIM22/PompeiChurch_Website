---
interface Props {
	id: string;
}
const { id } = Astro.props;
---

<div
	id={id}
	class="absolute right-4 top-2 flex w-fit cursor-pointer flex-col items-end"
>
	<span
		class="mb-1.5 block h-1 w-11 rounded bg-black/70 transition-all duration-300"
	></span>
	<span
		class="mb-1.5 block h-1 w-8 rounded bg-black/70 transition-all duration-300"
	></span>
	<span
		class="mb-1.5 block h-1 w-11 rounded bg-black/70 transition-all duration-300"
	></span>
</div>
