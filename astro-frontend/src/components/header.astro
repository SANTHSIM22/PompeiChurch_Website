---
import { Icon } from 'astro-icon/components'

---

<header
	class="sticky top-0 flex justify-between items-center bg-yellow-100 px-4 py-2 shadow"
>
	<div class="flex items-center space-x-2">
		<img
			src="https://flowbite.com/docs/images/logo.svg"
			class="aspect-square"
			alt="logo"
		/>
		<p class="text-base font-bold">Our Lady of Pompei Church</p>
	</div>

	<ul class="flex list-none space-x-3 flex-grow justify-center">
		<li><a class="hover:underline" href="#">Home</a></li>
		<li><a class="hover:underline" href="#">About us</a></li>
		<li><a class="hover:underline" href="#">Associations</a></li>
		<li><a class="hover:underline" href="#">News</a></li>
		<li><a class="hover:underline" href="#">Contact</a></li>
	</ul>

	<div class="mx-3 ">
		<button>
			<Icon name="languages" class="text-lg" />

		</button>
	</div>
</header>