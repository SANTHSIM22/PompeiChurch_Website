---
import { Image } from 'astro:assets';
import { getLangFromUrl } from '~/i18n/utils';
import { associations } from '~/constants/associations';
import { associationsKok } from '~/constants/associations-kok';
import fallbackImage from '~/assets/church-logo.png';

const lang = getLangFromUrl(Astro.url);
const { slug } = Astro.params;

const associationData = lang === 'kok' ? associationsKok : associations;

const association = associationData.find((assoc) => assoc.slug === slug);

const {
	associationImage = fallbackImage,
	description,
	officeBearers = [],
} = association || {};
---

<div class="mx-auto">
	<div class="mt-2">
		<div class="flex justify-center">
			<Image src={associationImage} alt="" />
		</div>
		<h2 class="mt-6 text-left font-poppins text-2xl font-bold text-slate-900">
			About the Association
		</h2>
		<p
		class="text-md mt-4 text-justify font-geist leading-7 text-slate-700 lg:text-left"
		set:html={description}
		></p>
		<h2 class="mt-6 text-left font-poppins text-2xl font-bold text-slate-900">
			Office Bearers
		</h2>
		<ul class="my-4 list-inside list-disc text-base text-slate-700">
			{
				officeBearers.map((bearer) => (
					<li class="text-left">
						<strong>{bearer.position}:</strong> {bearer.name}
					</li>
				))
			}
		</ul>
	</div>
</div>