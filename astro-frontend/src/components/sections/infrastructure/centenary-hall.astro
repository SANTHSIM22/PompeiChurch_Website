---
import centenaryHallImage from '~/assets/centenary-hall.jpg';
import { Image } from 'astro:assets';
import { loremIpsum } from '~/constants/lorem-ipsum';
---

<div class="mx-auto">
	<h2 class="mt-4 pb-3 font-poppins text-2xl font-bold">Centenary Hall</h2>
	<Image
		src={centenaryHallImage}
		alt="Centenary Hall Image"
		class="mt-6 rounded-sm md:float-left md:mr-5 md:w-1/2"
	/>
	<div class="mb-2 mt-6 pb-4 font-geist">
		<p class="mt-4 text-justify text-lg text-slate-700">{loremIpsum}</p>
	</div>
</div>
