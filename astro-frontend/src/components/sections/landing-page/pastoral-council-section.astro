---
import { getLangFromUrl, useTranslations } from '~/i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
import HoverableLink from '~/components/ui/hoverable-link.astro';
import Card from '../../pastoral-council-card.astro';
import dummyImage from '~/assets/dummy-image.png';
import priestImage from '~/assets/fr-rudolf-dsa.jpg';
import vicepresident from '~/assets/vp-image.jpg';
import ayogPresident from '~/assets/ayog-president.jpg';
---

<section class="mt-6 flex flex-col lg:justify-evenly lg:mx-28 lg:min-h-[70svh]">
	<h1
		data-aos="fade-right"
		class="mx-6 mb-4 border-l-4 border-natgeo-yellow pl-3 font-poppins text-3xl lg:text-4xl font-extrabold"
	>
		{t('landing.pastoral-parishad')}
	</h1>

	<div
		class="my-4 pl-3 flex w-full max-w-full scroll-ml-6 xl:space-x-10 space-x-8 overflow-x-auto overflow-y-hidden scrollbar-none"
	>
		<Card
			imageUrl={priestImage}
			subtitle={t('landing.priest')}
			title={t('landing.priest-name')}
		/>
		<Card
			imageUrl={vicepresident}
			subtitle={t('landing.vice-president')}
			title={t('landing.vp-name')}
		/>
		<Card
			imageUrl={dummyImage}
			subtitle={t('landing.secretary')}
			title={t('landing.secretary-name')}
		/>
		<Card
			imageUrl={ayogPresident}
			subtitle={t('landing.pastoral-commission-coordinator')}
			title={t('landing.pastoral-commission-coordinator-name')}
		/>

		<div class="flex-shrink-0 snap-start transform border shadow-sm transition-all duration-200 ease-in-out hover:scale-[1.01]">
			<div class="blur-md opacity-50">
				<Card
					imageUrl={ayogPresident}
					subtitle={t('landing.pastoral-commission-coordinator')}
					title={t('landing.pastoral-commission-coordinator-name')}
				/>
			</div>

			<div class="absolute inset-0 flex items-center justify-center">
				<HoverableLink class="mb-2 mt-2 inline-block text-black font-bold text-xl">
					View All
				</HoverableLink>
			</div>
		</div>
	</div>
</section>
