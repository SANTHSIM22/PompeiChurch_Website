---
import { getLangFromUrl, useTranslations } from '~/i18n/utils';
import { Image } from 'astro:assets';
import pcl1 from '~/assets/pcl-poster-1.jpg';
import pcl2 from '~/assets/pcl-poster-2.jpg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="mx-6 flex flex-col lg:mx-28 lg:min-h-[70svh] lg:justify-evenly mb-4"
>
  <h1
    data-aos="fade-right"
    class="mb-6 inline-block border-l-4 border-natgeo-yellow pl-3 font-poppins text-3xl font-extrabold xs:text-2xl lg:text-4xl"
  >
    {t('landing.upcoming-events')}
  </h1>
  <div class="flex flex-col gap-4 md:flex-row md:gap-6 justify-center">

    <Image
      src={pcl1}
      alt=""
      class="w-full md:w-1/3 object-cover rounded-sm"
    />

    <Image
      src={pcl2}
      alt=""
      class="w-full md:w-1/3 object-cover rounded-sm"
    />
  </div>
</section>
