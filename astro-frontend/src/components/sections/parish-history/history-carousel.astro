---
import { Image } from 'astro:assets';
import EmblaCarosuel from '~/components/ui/embla-carousel.astro';
import EmblaCarosuelItem from '~/components/ui/embla-carousel-item.astro';

import churchBanner from '~/assets/church-banner.jpg';
import churchHeroImage from '~/assets/church-hero.jpg';
---
<EmblaCarosuel>
  <EmblaCarosuelItem>
    <Image
      src={churchBanner}
      alt="Banner Image"
      class=" md:h-[95vh] w-full object-fill aspect-[1:1]"
    />
  </EmblaCarosuelItem>
  <EmblaCarosuelItem>
    <Image
      src={churchHeroImage}
      alt="Church Image"
      class=" md:h-[95vh] w-full object-fill aspect-[1:1]"
    />
  </EmblaCarosuelItem>
  <EmblaCarosuelItem>
    <Image
      src={churchBanner}
      alt="Church Banner"
      class=" md:h-[95vh] w-full object-fill aspect-[1:1]"
    />
  </EmblaCarosuelItem>
</EmblaCarosuel>
