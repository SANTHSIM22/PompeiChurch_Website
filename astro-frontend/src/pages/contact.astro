---
import { Icon } from 'astro-icon/components';
import Layout from '~/layouts/layout.astro';
---

<Layout title="Pompei Church | Contact">
  <section class="p-6 font-poppins flex flex-col lg:items-center text-slate-100">
    <h1
      class="mb-6 border-l-4 border-l-natgeo-yellow pl-3 text-3xl font-extrabold text-black"
    >
      CONTACT US
    </h1>
    <h1 class="text-gray-900 font-normal text-center text-lg">Contact us for more information about our church activities, hall bookings, and other details</h1>

    <div class="flex flex-col lg:flex-row items-center md:mx-56">
      <div class="mx-auto mt-8 lg:px-4 py-2 bg-white max-w-4xl">
        <div class="mb-6 border-b-2 pb-4 flex items-center">
				<Icon name="map-pin" size={22} class="text-gray-900"/>
          <p class="ml-4 text-gray-800 font-semibold">Gurpur, Kinnikambla, Mangaluru</p>
        </div>

        <div class="mb-6 border-b-2 pb-4 flex items-center">
				  <Icon name="contact-phone" size={22} class="text-gray-900"/>
          <p class="ml-4 text-gray-800 font-semibold">6969696969</p>
        </div>

        <div class="mb-6 border-b-2 pb-4 flex items-center">
          <Icon name="user" size={22} class="text-gray-900"/>
          <p class="ml-4 text-gray-800 font-semibold"> Mon-Sat: 9AM - 1PM | 2PM-5PM </p>
        </div>

        <div class="mb-6 border-b-2 pb-4 flex items-center">
          <Icon name="clock" size={22} class="text-gray-900"/>
          <p class="ml-4 text-gray-800 font-semibold">John cena</p>
        </div>

        <div class="mb-6 pb-4 flex items-center">
          <Icon name="contact-mail" size={22} class="text-gray-900"/>
          <p class="ml-4 text-gray-800 font-semibold">pompeichurch100@gmail.com</p>
        </div>
      </div>

 <div class="lg:ml-10 lg:border-gray-300 lg:max-w-md">
        <iframe data-tally-src="https://tally.so/embed/me7q7O?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1" loading="lazy" width="100%" height="276" frameborder="0" marginheight="0" marginwidth="0" title="Contact form"></iframe>
      </div>
    </div>

  <div class="max-w-4xl w-full">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13260.49078439848!2d74.9254980873684!3d12.961133328525621!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3ba357ac5f2a68cf%3A0x3976db3d34963470!2sOur%20Lady%20Of%20Pompei%20Church!5e0!3m2!1sen!2sin!4v1724241128491!5m2!1sen!2sin"
      width="100%"
      height="300"
      allowfullscreen
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      class="rounded-md"
    ></iframe>

  </div>
  </section>
  <script>
    var d=document,w="https://tally.so/widgets/embed.js",v=function(){
      "undefined"!=typeof Tally?Tally.loadEmbeds():d.querySelectorAll("iframe[data-tally-src]:not([src])").forEach((function(e){e.src=e.dataset.tallySrc}))
    };
    if("undefined"!=typeof Tally)v();else if(d.querySelector('script[src="'+w+'"]')==null){
      var s=d.createElement("script");s.src=w,s.onload=v,s.onerror=v,d.body.appendChild(s);
    }
  </script>
</Layout>
