---
import ObituaryList from '~/components/sections/obituary/obituary-list.astro';
import Layout from '~/layouts/layout.astro';
---

<Layout title="Pompei Church | Obituary">
	<main class="mx-auto max-w-4xl overflow-hidden bg-white">
		<section id="obituary" class="flex flex-col p-6 pb-4">
			<h1
				class="mb-4 border-l-4 border-natgeo-yellow pl-3 text-3xl font-extrabold lg:text-4xl"
			>
				OBITUARY
			</h1>
			<p class="p-3 pb-6 font-geist text-2xl font-bold italic text-red-600">
				Tribute of Love
				<p>
					<ObituaryList />
				</p>
			</p>
		</section>
	</main></Layout
>
